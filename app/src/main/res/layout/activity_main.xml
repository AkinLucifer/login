<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_margin="30dp"
      app:cardCornerRadius="30dp"
      app:cardElevation="20dp"
      android:background="@drawable/custom_edit">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_horizontal"
          android:padding="24dp"
         >
   <TextView
       android:id="@+id/text1"
       android:layout_width="match_parent"
       android:text="Username"
       android:textSize="25sp"
       android:layout_height="wrap_content"
       android:textColor="@color/black"
       android:layout_marginTop="20sp"
       android:layout_marginBottom="20sp"
       android:layout_marginStart="20sp"
       android:layout_marginEnd="20sp"
       android:textAlignment="center"
       />
   <EditText
       android:id="@+id/edit"
       android:layout_width="match_parent"
       android:textColor="@color/black"
       android:hint="Enter your username"
       android:textSize="12sp"
       android:layout_height="wrap_content"
       android:layout_marginBottom="20sp"
       android:layout_marginStart="20sp"
       android:layout_marginEnd="20sp"
       android:textAlignment="center"
       />

   <TextView
       android:layout_width="match_parent"
       android:id="@+id/text2"
       android:text="Password"
       android:textColor="@color/black"
       android:textSize="25sp"
       android:layout_height="wrap_content"
       android:layout_marginBottom="20sp"
       android:layout_marginStart="20sp"
       android:layout_marginEnd="20sp"
       android:textAlignment="center"
       />

   <EditText
       android:id="@+id/edit2"
       android:layout_width="match_parent"
       android:hint="Enter your password"
       android:textColor="@color/black"
       android:textSize="12sp"
       android:layout_height="wrap_content"
       android:layout_marginBottom="20sp"
       android:layout_marginStart="20sp"
       android:layout_marginEnd="20sp"
       android:textAlignment="center"
       android:inputType="textPassword"
       />



   <Button
       android:id="@+id/log"
       android:layout_gravity="center"
       android:layout_width="300sp"
       android:layout_height="70sp"
       android:text="Login"
       android:textSize="40sp"
       android:textAlignment="center"
       android:layout_marginTop="10sp"
       android:background="@color/material_dynamic_tertiary80"
       />
      </LinearLayout>
   </androidx.cardview.widget.CardView>
   <TextView
       android:id="@+id/sign"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="25sp"
       android:textAlignment="textEnd"
       android:text="Sign-up Here"
       android:layout_marginEnd="35sp"
       android:textColor="@color/b1"
       android:textSize="25sp"
       android:textIsSelectable="true"
      />

   <Button
       android:id="@+id/demo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="30sp"
      android:text="fragment"
       />
   <Button
       android:id="@+id/popup_menu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="30sp"
      android:text="Pop Up menu"
       />
   <TextView
       android:layout_margin="10sp"
       android:id="@+id/cmenu_example"
       android:layout_width="200sp"
       android:layout_height="80sp"
       android:textAlignment="center"
       android:layout_gravity="center"
       android:text="Long Presss Me(Context_Menu Example)"
       android:textSize="20sp"
       android:clickable="true"
       android:textColor="#6994DF"
      />
   <Button
       android:id="@+id/button2"
       android:layout_width="200sp"
       android:layout_height="70sp"
       android:layout_gravity="center"
       android:text="Dialog Box examples"
      />
</LinearLayout>


